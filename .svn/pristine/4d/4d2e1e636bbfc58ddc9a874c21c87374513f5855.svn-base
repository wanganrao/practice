* {
    box-sizing:border-box;
    -moz-box-sizing:border-box;
    -webkit-box-sizing:border-box;
    margin:0;
}


.header{
    background-color:lightgreen; 
    padding: 10px;
    width:100%;
}

.footer{
    background-color:lightgreen;
    clear:both
}
body,h1,h2,h3,h4,div,td,th,p,ul,ol,input,textarea,select {
    font-family:arial;
}

body {
    background-color:white;
    font-size:16px;
}

hr {
    clear:both;
    margin-top:10px;
    margin-bottom:10px;
    height:1px;
    background-color:lightgreen;
    border-width:0;
}

a {
    text-decoration:none;
    color:blue;
}

a:hover {
    text-decoration:underline;
    cursor:pointer;
}

a:active,a:hover {
    outline:0;
}

div,td,th,p,ul,ol,input,textarea,select {
    font-size:16px;
    line-height: 1.5;
}
td.mf-td-qno{
    font-weight: bold;
}
td.mf-td-option{
    padding: 5px;
    vertical-align: top;
}
tr.mf-tr-option{
    cursor: pointer;
}

tr.mf-tr-option:hover {
    outline: 1px solid lightgreen;

}


.mf-none{
    display: none;
}

.mf-tr-wronganswer{
    color: lightsalmon;
}
.mf-tr-rightanswer{
    color: green;
    font-weight: bold;
}

.mf-div-toolbar-btn{    
    margin-top: 5px;
    color: white;
    border: white 1px solid;
    background: green;
    border-radius: 3px;
    line-height: 2;
}

table.mf-tbl-options{
    padding: 5px;
}

div.main-panel{
    border:0;
    text-align:center;
    margin:0;
    padding:10px 0;
}

div.inner-panel {
    width:1080px;
    background-color:#fff;
    border:1px solid #ddd;
    text-align:left;
    display:inline-block;
    box-shadow:0 1px 5px rgba(0,0,0,0.12),0 1px 2px rgba(0,0,0,0.24);
    margin:0;
    padding:10px 15px 15px;
}

div.left-panel {
    width:70%;
    float:left;
    padding-top:15px;
}

div.right-panel {
    width:30%;
    float:right;
    padding-top:15px;
}

div.mf-div-answer{
    border:green 1px solid;
    border-radius: 5px;
     padding: 10px;
}
