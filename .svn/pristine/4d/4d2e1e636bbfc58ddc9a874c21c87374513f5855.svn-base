div.mf-div-toolbar{
    border-radius: 5px;
    background: lightgreen;
    padding: 5px;
    vertical-align: middle;

}*/
@media only screen and (min-width: 1060px){
    div.inner-panel {
        width:1070px;
    }

    div.left-panel {
        width:70%;
        float:left;
        clear:none;
    }

    div.right-panel {
        width:29%;
        float:right;
        text-align:left;
        clear:none;
    }
}

@media only screen and (min-width: 500px) and (max-width: 1110px){
    div.inner-panel {
        width:95%;
    }

    div.div-right-inner {
        border:0;
        padding:0;
    }

    p.mx-panelr {
        text-align:center;
        padding-left:0;
    }

    .hide-2 {
        display:none;
    }

    div.left-panel,div.right-panel {
        width:100%;
        float:left;
        clear:both;
    }
}

@media only screen and (max-width:520px){
    div.div-right-inner {
        border:0;
        padding:0;
    }

    p.mx-panelr {
        text-align:center;
        padding-left:0;
    }

    div.div-home-module {
        margin-left:0;
        width:100%;
        display:block;
        clear:both;
    }

    div.search-holder input.search-box {
        width:140px;
    }

    div.div-topics-index {
        width:99%;
        clear:both;
    }

    .hide-1 {
        display:none;
    }

    div.div-bl-content img {
        width:50%;
        height:auto;
        min-width:100px;
        max-width:250px;
    }

    div.left-panel,div.right-panel {
        width:100%;
        float:left;
        clear:both;
    }
}

@media only screen and (max-width:820px){
    div.inner-panel {
        width:100%;
        border:none;
        box-shadow:none;
        padding:10px;
    }

    div.main-panel{
        padding:0;
    }

    div.div-bl-content img {
        width:50%;
        height:auto;
        min-width:100px;
        max-width:400px;
    }
}

