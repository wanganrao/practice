* {
    box-sizing:border-box;
    -moz-box-sizing:border-box;
    -webkit-box-sizing:border-box;
    margin:0;
}
html, 
body {
   
}

.header{
    font-family: courier;
    font-size: 37px;
    font-weight: bold;
    letter-spacing: 3px;
    color: #555555;
    display: block;
    top: 17px;
}
.header-forum{
    color: #4CAF50;
}
.mf-menu{
    width:100%;
    line-height: 1;
    color: #f1f1f1;
    background-color: #5f5f5f;
    padding: 0;
    letter-spacing: 1px;
}
.mf-menu a{
    text-decoration: none;
    display: inline-block;
    font-size: 18px;
    padding: 5px 10px 5px 10px;
    letter-spacing: 1px;
       color: #f1f1f1;

}
.mf-menu a:hover {
    background-color: #4CAF50;
    color: #ffffff;
    text-decoration: none;
}

.div-home-box{
    border:1px solid #5f5f5f;
    width:60%;
    align-self: center;
    margin:40px;
}
.home-headings{
    color: #ffffff;
    background-color:#5f5f5f;
    padding-left:10px;
}
.footer{
    background-color:#5f5f5f;
    color:#f1f1f1;
    clear:both
}
body,h1,h2,h3,h4,div,td,th,p,ul,ol,input,textarea,select {
    font-family:arial;
}

body {
    background-color:white;
    font-size:14px;
}

hr {
    clear:both;
    margin-top:10px;
    margin-bottom:10px;
    height:1px;
    background-color:#4CAF50;
    border-width:0;
}

a {
    text-decoration:none;
    color:#4CAF50;
}

a:hover {
    text-decoration:underline;
    cursor:pointer;
}

a:active,a:hover {
    outline:0;
}

div,td,th,p,ul,ol,input,textarea,select {
    font-size:14px;
    line-height: 1.5;
}

h1 {
    font-size: 17px;
    margin: 0;
    padding: 0;
    border: 0;
    color: #4CAF50;
    line-height: 1.5;
}
td.mf-td-qno{
    font-weight: bold;
}
td.mf-td-option{
    padding: 5px;
    vertical-align: top;
}
tr.mf-tr-option{
    cursor: pointer;
}

tr.mf-tr-option:hover {
background-color: #f1f1f1;
}

.mf-green{
    color: #4CAF50;
}
.mf-none{
    display: none;
}

.mf-tr-wronganswer{
    color: lightsalmon;
}
.mf-tr-rightanswer{
    color: #4CAF50;
    font-weight: bold;
}

.mf-div-toolbar-btn{    
    margin-top: 5px;
    color: white;
    border: white 1px solid;
    background: blue;
    border-radius: 5px;
    line-height: 1.5;
}

.mf-td-topic{
    border-bottom: 1px dotted #4CAF50;
}
table.mf-tbl-options{
    padding: 5px;
}

div.main-panel{
    border:0;
    text-align:center;
    margin:0;
    padding:10px 0;
    min-height: 100%;
}

div.inner-panel {
    width:1080px;
    background-color:#fff;
    border:1px solid #ddd;
    text-align:left;
    display:inline-block;
    box-shadow:0 1px 5px rgba(6, 249, 2, 0.43),0 1px 2px rgba(34, 243, 8, 0.24);
    margin:0;
    padding:10px 15px 15px;
}

div.left-panel {
    width:70%;
    float:left;
    padding-top:15px;
}

div.right-panel {
    width:30%;
    float:right;
    padding-top:15px;
}

div.mf-div-answer{
    border:#4CAF50 1px solid;
    border-radius: 5px;
    padding: 10px;
}

.pagination {
    text-align: center;
}
div.pagination a{
display: inline-block;
clear: both;
    padding-bottom: 10px;
}

div.mf-div-toolbar{
    
    display: block;
   margin: 0px 5px 5px 0px;

}

div.mf-div-toolbar .show-answer, .discuss{
    
   margin: 0px 10px 10px 10px;

}
@media only screen and (min-width: 1060px){
    div.inner-panel {
        width:1070px;
    }

    div.left-panel {
        width:70%;
        float:left;
        clear:none;
    }

    div.right-panel {
        width:29%;
        float:right;
        text-align:left;
        clear:none;
    }
}

@media only screen and (min-width: 500px) and (max-width: 1110px){
    div.inner-panel {
        width:95%;
    }

    div.div-right-inner {
        border:0;
        padding:0;
    }

    div.left-panel,div.right-panel {
        width:100%;
        float:left;
        clear:both;
    }
}

@media only screen and (max-width:520px){
    div.div-right-inner {
        border:0;
        padding:0;
    }
    
    div.left-panel,div.right-panel {
        width:100%;
        float:left;
        clear:both;
    }
}

@media only screen and (max-width:820px){
    div.inner-panel {
        width:100%;
        border:none;
        box-shadow:none;
        padding:10px;
    }

    div.main-panel{
        padding:0;
    }

}

