class Pagination_Model extends Model{

    function __construct() {
        parent::__construct();
    }

    public function getTotalQuestions() {
        $result = $this->query("select count(id) as count from questions");//$result returned is an array of arrays, the count value is in first item of the first array
        return $result[0]['count'];        
    }

}
